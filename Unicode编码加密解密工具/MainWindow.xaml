<Window x:Class="Unicode编码加密解密工具.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Unicode编码加密解密工具"
        mc:Ignorable="d"
        Title="Unicode编码加密解密工具" Height="450" Width="800" MaxHeight="450" MaxWidth="800" MinHeight="450" MinWidth="800" Icon="img/512X512.png">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="45*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="45*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="textBox" Margin="10,10,10,0" TextWrapping="Wrap" Text="" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
        <Button x:Name="button" Content="加密" HorizontalAlignment="Left" Margin="10,11,0,12" Grid.Row="1" Width="75" Click="button_Click"/>
        <Button x:Name="button2" Content="解密" Margin="0,11,10,12" Grid.Row="1" HorizontalAlignment="Right" Width="75" Click="button2_Click"/>
        <TextBox x:Name="textBox1" Margin="10,0,10,10" Grid.Row="2" TextWrapping="Wrap" Text="" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
        <Label x:Name="label" Content="在上方输入需要加密/解密的字段,点击按钮即可进行加密/解密" Margin="226,7,227,10" Grid.Row="1" />

    </Grid>
</Window>
